            <div class="iinearea">
                <%=  image_tag('heart-pink.png',:class => "heart" )%>
                <p class="iine">いいね　28件</p>
            </div>
            <div class="captionarea">
                <p class="indexcaption">キャプションを表示</p>
            </div>
        </div>
</div>
