
<% escape.each do |escapes| %>
<% @users = Users.where('id = ?',escapes['user_id']) %>
<% @images = Images.where('escape_id = ?',escapes['id']) %>
<% @tags =  Escape_themes.where('escape_id = ?',escapes['id']) %>
<% captiontop = nil  %>
<% garally_count = 0 %>
    <% image_count = 0 %>
    <% @users.each do |user| %>
<div class="cardview">
        <div class="thumarea">
            <p class="username"><%= user['name'] %></p>
            <p class="location">@<%= escapes['location_name'] %></p>
            <img class="museicon" src="<%= user['thumb_image_file'] %>">
        </div>
        <p class="maincaption">
            <%= escapes['content']%>
        </p>
        <div class="tagarea">
            <% @tags.each do |tag| %>
                <% @tag_name =  Themes.where('id = ?',tag['theme_id']) %>
                <% @tag_name.each do |tagname| %>
                         <a class="tag">#<%= tagname['name'] %></a>
                <%end%>
            <%end%>
        </div>
        <div class="swiper-container">
            <div class="swiper-wrapper">
                <% @images.each do |image| %>
                    <% if captiontop == nil then captiontop = image['caption']  end%>
                     <div id="img1-1" class="swiper-slide " style="background-image:url(<%= image['image_file'] %>)" onclick="openGarraly(this)" alt="<%= user['id'] %>">
                        <p class="swipe-caption">
                            <%= image['caption'] %>
                        </p>
                    </div>

                <%end%>
            </div>
            <!-- Add Pagination -->
            <!--<div class="swiper-pagination top20"></div>-->
        </div>
        <div class="bottomarea">
            <div class="iinearea">
                <%=  image_tag('heart-pink.png',:class => "heart" )%>
                <p class="iine">いいね　<%= escapes['tmp_favorite'] %>件</p>
            </div>
            <div class="captionarea">
                <a href="http://localhost:3000/escape/<%= escapes['id'] %>">
                    <p class="indexcaption"><%= captiontop %>.....>>> 続きを見る <span class=". "></span></p>
                </a>
            </div>
        </div>
</div>
    <% end %>
<% end %>

<script>
    var swiper = new Swiper('.swiper-container', {
        pagination: '.swiper-pagination',
        effect: 'coverflow',
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: 'auto',
        coverflow: {
            rotate: 10,
            stretch: 20,
            depth: 190,
            modifier: 1,
            slideShadows : true
        }
    });

</script>